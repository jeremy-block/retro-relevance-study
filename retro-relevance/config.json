            "type": "questionnaire",
            "response": [
                {
                    "id": "originalSummary",
                    "prompt": "Please paste the text from the researcher",
                    "required": true,
                    "location": "aboveStimulus",
                    "type": "longText",
                    "placeholder": "Please enter the output from the large language model"
                },
                {
                    "id": "participantAssignedID",
                    "prompt": "Please enter a participant ID number",
                    "required": true,
                    "hidden": false,
                    "location": "sidebar",
                    "type": "shortText"
                }
            ]
        },
        "SelectionTask": {
            "description": "This is selection",
