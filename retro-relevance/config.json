{
    "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v2.1.0/src/parser/StudyConfigSchema.json",
    "studyMetadata": {
        "title": "Retrospective Relevance",
        "version": "pilot phase 4",
        "authors": [
            "Jeremy Block"
        ],
        "date": "2025-04-01",
        "description": "We want to evaluate how you edit summaries of your work",
        "organizations": [
            "University of Florida"
        ]
    },
    "uiConfig": {
        "contactEmail": "j.block@ufl.edu",
        "logoPath": "../retro-relevance/assets/noun-retrospective-7620763.svg",
        "withProgressBar": true,
        "autoDownloadStudy": true,
        "autoDownloadTime": 5000,
        "studyEndMsg": "Thank you for completing this study. You're the best!",
        "sidebar": true,
        "windowEventDebounceTime": 500,
        "urlParticipantIdParam": "PROLIFIC_ID",
        "numSequences": 500
